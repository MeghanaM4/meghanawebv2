---
import Layout from "../layouts/Layout.astro";
import Dome from "../components/Dome.jsx";
import data from "../data/photodome.json";
import "../styles/global.css";

const imgs = data.map((img) => ({
  src: `../photodome/${img.src}.webp`,
  alt: img.caption,
}));
---

<Layout>
  <div class="fixed inset-0 w-screen h-screen">
    <p
      style="font-family:static !important; z-index: 20; position: fixed; margin-left: 1rem; letter-spacing: 0.7rem; color:#c4cdde; font-size: 4em;"
    >
      photodome
    </p>

    <Dome client:load images={imgs} />
  </div>


  <a
    href="./terminal"
    style="position: fixed !important; bottom: 1rem !important; left: 1rem !important; z-index: 10000 !important; background-color: #FDC576 !important; border-radius: 5rem; width:3rem; aspect-ratio: 1/1; align-items: center; display: flex; justify-content: center;"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      height="32"
      width="32"
      viewBox="0 0 24 24"
    >
      <path
        fill="#FFFFFF"
        d="M4.4 7.4L6.8 4h2.5L7.2 7h6.3a6.5 6.5 0 0 1 0 13H9l1-2h3.5a4.5 4.5 0 1 0 0-9H7.2l2.1 3H6.8L4.4 8.6L4 8z"
      ></path>
    </svg>
  </a>
</Layout>
